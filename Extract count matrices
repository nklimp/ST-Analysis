#extract full count matrix from seurat object
se.counts <- as.data.frame(se@assays[["RNA"]]@counts)

#extract all Olfr transcripts from count matrix
olfr.index <- grep("Olfr", rownames(se.counts))

#generate count matrix with only Olfr transcripts
olfr.counts <- (se.counts[olfr.index,])

#generate count matrix with only Olfr transcripts and only spots containing at least one Olfr transcript count
olfr.spots <- as.numeric(which(colSums(olfr.counts)>0))
olfr.total.counts <- (olfr.counts[,olfr.spots])
